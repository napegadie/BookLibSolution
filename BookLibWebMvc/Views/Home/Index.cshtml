@using BookLibWebMvc.EntitiesDto
@addTagHelper *, AuthoringTagHelpers
@model List<BookDto>
@{
    ViewBag.Title = "Book List";
}
<div class="table-responsive">
    <table class="table table-striped d-sm-table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date Published</th>
                <th>Genre Name</th>
                <th>Publisher Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.Description</td>
                    <td>@book.DatePublished</td>
                    <td>@book.GenreName</td>
                    <td>@book.PublisherName</td>
                    <td>
                        <a class="btn btn-link btn-sm btn-rounded" asp-action="Edit" asp-route-id="@book.BookId">Edit</a> 
                        @*<a style="color:aqua" class="btn btn-success" asp-action="Details" asp-route-id="@book.BookId">Details</a> *@
                        <a class="btn btn-link btn-sm btn-rounded" asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                     </td>
                </tr>
            }
        </tbody>
    </table>
</div>
