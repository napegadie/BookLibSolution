@using BookLibWebMvc.EntitiesDto
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model AuthorDto
@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="col-sm-12">
            <div class="jumbotron">
                <h1 class="display-4">Create Author!</h1>
                <p class="lead">Add a new Author to the available list.</p>
            </div>
        </div>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Author" asp-action="Add" method="post">
    <div class="form-row">
        <div class="col-md-6 offset-md-3">
            <div class="col-sm-12">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" /><br />
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>
            <div class="col-sm-12">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" /><br />
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
            <div asp-validation-summary="ModelOnly">
            </div>
            <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary  w-100">Back</a>
                    </div>
            </div>
        </div>
    </div>
</form>
