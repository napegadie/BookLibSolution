@using BookLibWebMvc.EntitiesDto
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model GenreDto
@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="col-sm-12">
            <div class="jumbotron">
                <h1 class="display-4">Update Genre</h1>
                <p class="lead">Add a new Genre to the available list.</p>
            </div>
        </div>
    </div>
</div>


<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Genre" asp-action="Update" method="post">
    <div class="form-row">
        <div class="col-md-6 offset-md-3">
            <div class="col-sm-12">
                <input asp-for="GenreId" type="hidden" />
                <label asp-for="GenreName"></label>
                <input asp-for="GenreName" class="form-control" /><br />
                @Html.ValidationMessageFor(x => x.GenreName)
            </div>
            <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary  w-100">Back</a>
                    </div>
             </div>
        </div>
    </div>
</form>
