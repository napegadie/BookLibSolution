@using BookLibWebMvc.EntitiesDto
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PublisherDto
@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="col-sm-12">
            <div class="jumbotron">
                <h1 class="display-4">Update Publisher</h1>
                <p class="lead">Update a new Publisher to the available list.</p>
            </div>
        </div>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Publisher" asp-action="Update" method="post">
    <div class="form-row">
        <div class="col-md-6 offset-md-3">
            <div class="col-sm-12">
                <input asp-for="PublisherId" type="hidden" />
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" /><br />
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Publisher" asp-action="Index" class="btn btn-secondary  w-100">Back</a>
                    </div>
             </div>
        </div>
    </div>
</form>

